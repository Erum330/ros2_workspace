<?xml version="1.0"?>
<robot name="ball_bot">

  <!-- ========================== -->
  <!-- MATERIALS -->
  <!-- ========================== -->
  <material name="green"><color rgba="0 1 0 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="grey"><color rgba="0.7 0.7 0.7 1"/></material>
  <material name="dark_grey"><color rgba="0.2 0.2 0.2 1"/></material>

  <!-- ========================== -->
  <!-- WORLD LINK -->
  <link name="world"/>
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

  <!-- ========================== -->
  <!-- BASE LINK -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry><box size="0.25 0.25 0.10"/></geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry><box size="0.25 0.25 0.10"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- ========================== -->
  <!-- REAR LEFT WHEEL -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00016" ixy="0" ixz="0" iyy="0.00016" iyz="0" izz="0.000625"/>
    </inertial>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="0 0.12 0.015"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== -->
  <!-- REAR RIGHT WHEEL -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00016" ixy="0" ixz="0" iyy="0.00016" iyz="0" izz="0.000625"/>
    </inertial>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="0 -0.12 0.015"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== -->
  <!-- FRONT CASTER (moved back) -->
  <link name="front_caster">
    <visual>
      <geometry><sphere radius="0.025"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><sphere radius="0.025"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.000009" ixy="0" ixz="0" iyy="0.000009" iyz="0" izz="0.000009"/>
    </inertial>
  </link>
  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.09 0 0.01"/> <!-- moved slightly back -->
  </joint>

  <!-- ========================== -->
  <!-- LEFT FINGER (attached to base, lowered) -->
  <link name="left_finger">
    <visual>
      <origin xyz="0.125 0.035 0.025"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0.125 0.035 0.025"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
    </collision>
  </link>
  <joint name="left_finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_finger"/>
    <origin xyz="0.125 0.035 0.025"/>
    <axis xyz="0 0 -1"/>
    <limit lower="0" upper="1.2" effort="10" velocity="1.5"/>
  </joint>

  <!-- ========================== -->
  <!-- RIGHT FINGER (attached to base, lowered) -->
  <link name="right_finger">
    <visual>
      <origin xyz="0.125 -0.035 0.025"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0.125 -0.035 0.025"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
    </collision>
  </link>
  <joint name="right_finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_finger"/>
    <origin xyz="0.125 -0.035 0.025"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.2" effort="10" velocity="1.5"/>
  </joint>

  <!-- ========================== -->
  <!-- LIDAR -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0.12"/>
      <geometry><cylinder radius="0.03" length="0.04"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.12"/>
      <geometry><cylinder radius="0.03" length="0.04"/></geometry>
    </collision>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.12"/>
  </joint>

  <!-- ========================== -->
  <!-- CAMERA -->
  <link name="camera_link">
    <visual>
      <origin xyz="0.12 0 0.06"/>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <origin xyz="0.12 0 0.06"/>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
    </collision>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.12 0 0.06"/>
  </joint>

</robot>
